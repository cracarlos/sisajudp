<p>
  <h2>Juramentados:</h2>  
</p>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Acta</th>
      <th scope="col">Nombre</th>
      <th scope="col">Cedula</th>
      <th scope="col">Sede</th>
      <th scope="col">Competencia</th>
      <th scope="col">Resolución</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
     <% @tacprejuramentados.each do |juramentados| %>
    <tr>
      <td><%= juramentados.id_numero_acta%></td>
      <td><%= juramentados.primer_nombre%> <%= juramentados.primer_apellido%> </td>
      <td><%= juramentados.cedula%></td>
      <td><%= juramentados.sede%></td>
      <td><%= juramentados.competencia%></td>
      <td><%= juramentados.resolucion%></td>
      <td><%= link_to 'Editar', edit_juramentado_path(juramentados), :class => "btn btn-warning"%></td>
      <td><%= link_to 'Eliminar', juramentado_path, method: :delete, data:{confirm: '¿Esta seguro?'}, :class => "btn btn-success col-md-3" %> </td>
    </tr>
     <% end %>
  </tbody> 
</table>

<div class="offset-md-3">
   <%= link_to 'Agregar', new_juramentado_path, :class => "btn btn-success col-md-3" %> 

</div>
