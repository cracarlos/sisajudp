<p>
  <h2 id="qwe">Juramentados</h2>  
</p>
<div>
  <% if flash[:info]%>
    <div class="callout success"> 
      <%=flash[:info] %> 
    </div>
  <%end%>

  <% if flash[:error]%>
    <div class="callout alert"> 
      <%=flash[:error] %> 
    </div>
  <%end%>
</div>

<table class="radius bordered shadow" id="tacactasFirmantes">
  <thead class="backroundColorPrincipal" >
    <tr>
      <th scope="col">Acta</th>
      <th scope="col">Nombre</th>
      <th scope="col">Cedula</th>
      <th scope="col">Unidad</th>
      <th scope="col">Extensión o Sede</th>
      <th scope="col">Resolución</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
     <% @tacjuramentados.each do |juramentados| %>
    <tr>
      <td><%= juramentados.numero_acta%></td>
      <td><%= juramentados.primer_nombre%> <%= juramentados.primer_apellido%> </td>
      <td><%= juramentados.cedula%></td>
      <td><%= juramentados.coordinaciones_regionales%></td>
      <td><%= juramentados.coordinaciones_extensiones%></td>
      <td><%= juramentados.resolucion%></td>
      <td>
        <%= link_to '', edit_juramentado_path(juramentados.id), :class => "badge warning fi-page-edit", :title => "Editar"%>
        <%= link_to '', juramentado_path(juramentados.id), method: :delete, data:{confirm: '¿Esta seguro?'}, :class => "badge alert fi-trash", :title => "Eliminar"%> 
      </td>

    </tr>
     <% end %>
  </tbody> 
</table>

<div class="text-center ">
   <%= link_to 'Agregar', new_juramentado_path, :class => "button rounded bordered shadow buttonColor", id: 'asd'%> 
</div>
<p id="asd2"></p>
<script>
  
  $('#tacactasFirmantes').dataTable({
    language: traduceDataTable()
  });  
   
</script>