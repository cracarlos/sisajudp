<!DOCTYPE html>
<html>
  <head>
    <title>SISAJUDP</title>
    <link rel="icon" type="image/ico" href="<%= image_path("dp.ico") %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
   
<% if signed_in? %>
<div class="nav-side-menu">
    <div class="brand"> <%= image_tag("logo.png", size: "180x70")%></div>
    <i class="fa fa-bars fa-2x fa-toggle-down toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>
        <div class="menu-list">
            <ul id="menu-content" class="menu-content collapse out">
                <li>
                  <span class="fa fa-home" style="margin-left: 10px; "></span> <%= link_to "Inicio", actas_path, :class => "btn", :style=>"color:white; font-size: 20px;" %>
                </li>

                <li  data-toggle="collapse" data-target="#products" class="collapsed ">
                 <span class="fa fa-book" style="margin-left: 10px;"></span><b style="margin-left: 10px;">Actas</b> <span class="arrow"></span>
                </li>
                <ul class="sub-menu collapse" id="products">
                    <li class="active"><%= link_to "Crear", new_acta_path, :class => "btn", :style=>"color:white" %></li>
                    <li><%= link_to "Actas Abiertas", actas_abiertas_path, :class => "btn", :style=>"color:white" %></li>

                </ul>

                <li>
                  <span class="fa fa-user" style="margin-left: 10px; "></span> 
                  <%= link_to "Juramentados", juramentados_path, :class => "btn", :style=>"color:white; " %>
                </li>

                <li data-toggle="collapse" data-target="#usuarios" class="collapsed ">
                  <span class="fa fa-users" style="margin-left: 10px;"></span>
                  <%= link_to "Usuarios", usuarios_sistema_path, :class => "btn", :style=>"color:white" %>
                </li>

                <li>
                  <% if signed_in? %>
                    <span class="fa fa-sign-out" style="margin-left: 10px;">
                    <%= link_to "Salir", destroy_usuario_session_path, method: :delete, data: { confirm: "Â¿Seguro que quiere Salir?" } %>
                    </span>
                  <% end %>
                </li>
            </ul>
     </div>
</div>
<% end %>
<div class="offset-lg-2 offset-md-4  " style="padding: 10px;">
  <div >
    <%= yield %>
  </div>
</div>
  </body>
</html>
