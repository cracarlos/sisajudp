<div style=" width: 350px; margin-top: 12%; margin-left: 40%; padding: 20px; border-radius: 10px; box-shadow: 0px 0px 20px 5px rgb(165, 161, 161)">
<h2>Iniciar Sección</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :Correo %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control col-md-10" %>
  </div>

  <div class="form-group">
  
    <%= f.label :Contraseña %><br />
    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control col-md-10" %>
  
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Entrar", :class => "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
