<h2>Iniciar Sección</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :Correo %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control col-md-3" %>
  </div>

  <div class="form-group">
  
    <%= f.label :Contraseña %><br />
    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control col-md-3" %>
  
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar", :class => "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
