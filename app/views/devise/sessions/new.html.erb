

<style type="text/css">
  body{
    /*background-image: url("/assets/fondo.jpg");*/
     background-repeat: no-repeat;
     background-position: center;
     background-size: cover;
  }
  .caja{
    width: 350px; margin-top: 15%; padding: 20px; border-radius: 10px; box-shadow: 0px 0px 20px 5px rgb(165, 161, 161)
  }

</style>
<body>
<div class="caja  " style="margin-left: 30%; ">
<h2>Iniciar Sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :Correo %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control col-md-10" %>
  </div>

  <div class="form-group">
  
    <%= f.label :Contraseña %><br />
    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control col-md-10" %>
  
  </div>
  <div class="actions" style="margin-bottom: 20px;">
    <%= f.submit "Entrar", :class => "btn btn-success" %>
  </div>
<% end %>
</div>
</body>

