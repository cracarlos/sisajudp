<h2>Crear acta</h2>
<% flash.each do |type, msg| %>

  <div class="alert alert-danger"> <%= msg %> </div>
  
<% end %>

<%= form_with scope: :acta, url: actas_path, local: true do |acta| %>
<div class="form-row"> 
  <div class="form-group">
    <%#= acta.select :sede, options_from_collection_for_select(@tinsedes,
            :direccion, :descripcion), { prompt: 'Seleccione...' }, { required: true, class: 'form-control' } %>
  </div>
</div>

<div class="grid-x grid-padding-x" >
  
  <div class="large-4 cell"> 
    <%= acta.label :Firmante %><br>
   
      <%= acta.select :tac_firmante_id, options_from_collection_for_select(@tacfirmantes,
              :id, :nombre_completo), { prompt: 'Seleccione...' }, { required: true, class: 'form-control' } %>
  </div>
   <div class="large-4 cell">
    <%= acta.label :Fecha %><br>
    <input type="date" name="acta[para]">
  </div>
</div>


<div class="grid-x grid-padding-x"> 

</div>

<div class="text-center" style="">
    <%= acta.submit "Guardar", :class => "button rounded bordered shadow buttonColor" %>
</div>
<% end %>